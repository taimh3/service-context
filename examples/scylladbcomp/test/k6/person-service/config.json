{
    "environments": {
        "development": {
            "baseUrl": "http://localhost:8080",
            "timeout": "30s",
            "expectedResponseTime": 500
        },
        "staging": {
            "baseUrl": "https://staging-api.example.com",
            "timeout": "60s",
            "expectedResponseTime": 1000
        },
        "production": {
            "baseUrl": "https://api.example.com",
            "timeout": "60s",
            "expectedResponseTime": 200
        }
    },
    "testScenarios": {
        "smoke": {
            "description": "Quick smoke test with minimal load",
            "vus": 1,
            "duration": "30s",
            "thresholds": {
                "http_req_duration": [
                    "p(95)<1000"
                ],
                "errors": [
                    "rate<0.05"
                ]
            }
        },
        "load": {
            "description": "Standard load test",
            "stages": [
                {
                    "duration": "30s",
                    "target": 5
                },
                {
                    "duration": "1m",
                    "target": 10
                },
                {
                    "duration": "30s",
                    "target": 0
                }
            ],
            "thresholds": {
                "http_req_duration": [
                    "p(95)<500"
                ],
                "errors": [
                    "rate<0.1"
                ],
                "http_req_failed": [
                    "rate<0.1"
                ]
            }
        },
        "stress": {
            "description": "Stress test with high load",
            "vus": 20,
            "duration": "2m",
            "thresholds": {
                "http_req_duration": [
                    "p(95)<1000"
                ],
                "errors": [
                    "rate<0.15"
                ],
                "http_req_failed": [
                    "rate<0.15"
                ]
            }
        },
        "spike": {
            "description": "Spike test with sudden load increases",
            "stages": [
                {
                    "duration": "10s",
                    "target": 1
                },
                {
                    "duration": "10s",
                    "target": 20
                },
                {
                    "duration": "30s",
                    "target": 20
                },
                {
                    "duration": "10s",
                    "target": 1
                }
            ],
            "thresholds": {
                "http_req_duration": [
                    "p(95)<2000"
                ],
                "errors": [
                    "rate<0.2"
                ]
            }
        }
    },
